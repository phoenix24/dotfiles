[user]
	name	     = Chaitanya Sharma
	email	     = gopi.daiict@gmail.com

[alias]
	browse       = !hub browse
	w            = !hub browse
	compare      = !hub compare
	cb           = !git-cut-branch
	sh           = !git-sh
	grab         = !git-grab
	thanks       = !git-thanks
	track        = !git-track
	ll           = log --pretty=oneline --abbrev-commit --max-count=15
	wip          = !git add -u && git commit -m ...
	wipc         = !date >> WIP && git add WIP && git commit -m ...
	fp           = format-patch --stdout
	x            = checkout HEAD
	bv           = !git branch --color -v | cut -c1-100
	incoming     = !git-incoming
	in           = !git-incoming
	outgoing     = !git-outgoing
	out          = !git-outgoing
	s            = status -sb -uno --ignore-submodules=untracked
	sa           = status -sb --ignore-submodules=untracked
	d = difftool
	co	     = checkout
	cl           = clone
	st           = status
	ci           = commit
        df           = diff
	pr           = pull --rebase
	lg	     = log
	br	     = branch

[core]
	filemode = true
	logallrefupdates = true
	whitespace = space-before-tab, trailing-space

[help]
	browser = open

[branch]
	autosetupmerge = true

[diff]
	renames = copies
	mnemonicprefix = true
	tool = vimdiff

[push]
	default = current

[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = gopi.daiict@gmail.com

[color]
	ui = auto

[color "diff"]
	meta = blue bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "branch"]
	current = yellow reverse
	local = yellow bold
	remote = green bold
	plain = red bold

[color "status"]
	added = yellow
	changed = green bold
	untracked = blue bold

[hub]
	http-clone = true

[difftool]
	prompt = false

[format]
        pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset  
